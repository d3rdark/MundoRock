@model MundoRock.Areas.Admin.Models.MundoRockViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Editar";
    Layout = "LayoutAdmin";
}

<div class="Container">
    <form method="post" action="~/Admin/Reseñas/Editar">
        <h1>Editar una reseña</h1>
        <input type="hidden" id="idReseña" asp-for="Reseñas.Id" />
        <section>
            <label>Nombre de la reseña</label><br />
            <input type="text" required id="txtNombre" asp-for="Reseñas.Nombre" /><br />
            <label>Seleccionar album</label><br />
            <select id="cmbAlbum" asp-for="Reseñas.Idalbum" asp-items="@(new SelectList(Model.Albumes, "Id", "Nombre"))">
                <option selected="selected" value="">--Seleccionar album--</option>
            </select><br />
            <label>Reseña del album</label><br />
            <textarea rows="8" cols="20" id="txtInformacion" required asp-for="Reseñas.Informacion"></textarea>
        </section>
        <div class="botenes">
            <p id="error">
                @Html.ValidationSummary()
            </p>
            <input class="button" type="submit" value="Guardar" id="btnGuardar" />
            <a href="~/Admin/Reseñas">
                <input type="button" value="Cancelar" id="btnCancelar" />
            </a>
        </div>
    </form>
</div>

